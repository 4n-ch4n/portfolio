---
interface Project {
  title: string;
  description: string;
  link: string;
}

const projects: Project[] = [
  {
    title: "Distributed E-Commerce Backend System",
    description:
      "This project is a scalable, microservices-based backend system designed to handle core e-commerce operations. It decouples business logic into independent services to ensure maintainability and fault tolerance. The system uses a Client Gateway to aggregate requests and communicate with internal services via a high-performance message broker.",
    link: "https://github.com/an-microservices/launcher",
  },
  {
    title: "Iglua - Enterprise Field Service Management System",
    description:
      "This project is a comprehensive, cloud-native Field Service Management (FSM) platform designed to orchestrate complex maintenance operations, service orders, and technician dispatching. Built on a distributed microservices architecture, it enables companies to manage assets, track tickets, and generate dynamic reports in real-time.",
    link: "https://iglua.com",
  },
];
---

<section class="border-t border-slate-800 py-20 md:py-32" id="projects">
  <div class="mx-auto max-w-6xl space-y-16">
    <!-- Section Header -->
    <div class="space-y-4 text-center">
      <h2 class="text-4xl font-bold text-slate-800 md:text-5xl lg:text-6xl">
        Featured <span class="text-(--sec)">Projects</span>
      </h2>
      <p class="mx-auto max-w-2xl text-sm text-gray-600 md:text-base">
        A showcase of my work in building scalable systems and web applications.
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
      {
        projects.map((project) => (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative overflow-hidden rounded-2xl border border-gray-200/50 bg-white/80 p-6 backdrop-blur-md transition-all duration-300 hover:scale-105 hover:border-(--sec)/50 hover:shadow-xl md:p-8"
          >
            <div class="absolute inset-0 bg-linear-to-br from-(--sec)/0 to-(--sec)/0 transition-all duration-300 group-hover:from-(--sec)/5 group-hover:to-purple-500/10" />

            <div class="relative z-10 flex flex-col gap-4">
              {/* GitHub Icon */}
              <div class="flex items-center justify-between">
                <div class="rounded-lg bg-(--sec)/10 p-3 transition-all duration-300 group-hover:bg-(--sec)/20">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    class="h-8 w-8 fill-(--sec)"
                  >
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                </div>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  class="h-5 w-5 fill-gray-400 transition-all duration-300 group-hover:translate-x-1 group-hover:-translate-y-1 group-hover:fill-(--sec)"
                >
                  <path d="M7 7h8.586L5.293 17.293l1.414 1.414L17 8.414V17h2V5H7v2z" />
                </svg>
              </div>

              {/* Project Info */}
              <div class="space-y-3">
                <h3 class="text-xl font-bold text-slate-800 transition-colors duration-300 group-hover:text-(--sec) md:text-2xl">
                  {project.title}
                </h3>
                <p class="text-sm leading-relaxed text-gray-600 md:text-base">
                  {project.description}
                </p>
              </div>

              {/* View Project Link */}
              <div class="mt-2 flex items-center gap-2 text-sm font-semibold text-(--sec) md:text-base">
                View Project
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  class="h-4 w-4 fill-(--sec) transition-transform duration-300 group-hover:translate-x-1"
                >
                  <path d="M13.025 1l-2.847 2.828 6.176 6.176h-16.354v3.992h16.354l-6.176 6.176 2.847 2.828 10.975-11z" />
                </svg>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
